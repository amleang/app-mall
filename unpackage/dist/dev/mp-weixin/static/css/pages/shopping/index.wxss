
page {
  display: flex;
}
.main {
  display: flex;
  flex: 1;
  flex-direction: column;
  overflow: hidden;
  height: 100%;
  background-color: #F2F2F2;
}
.seller-item {
  background-color: #FFFFFF;
}
.seller {
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  height: 80rpx;
  border-bottom: 2rpx solid #eaeaea;
}
.seller .logo {
  height: 70rpx;
  width: 70rpx;
  margin-right: 10rpx;
}
.seller .logo image {
  height: 70rpx;
  width: 70rpx;
}
.product-list {
  padding: 0 20rpx;
}
.product-item {
  height: 150rpx;
  display: flex;
  align-items: center;
}
.product-item image {
  width: 140rpx;
  height: 100%;
}